---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ProfileImageAndContactLink from '../components/ProfileImageAndContactLink.astro';
import Presentation from '../components/Presentation.astro';
import Skills from '../components/Skills.astro';
import PreviousRoles from '../components/PreviousRoles.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
import content from '../data/content';

const headerData = {
  title: 'Mikael Jagekrans',
  subtitleRows: [
    'Polyglot Developer | DevOps Engineer',
    'Freelancer',
  ],
};

---

<Layout title={content.title}>
  <Header data={headerData} />

  <main class="lexend-deca extralight">
    <ProfileImageAndContactLink />
    <Presentation content={content.presentation} />
    <Skills skills={content.skills} />
    <PreviousRoles roles={content.previousRoles} />
    <ContactForm />
  </main>

  <Footer year={new Date().getFullYear()} />
</Layout>

<style>
  main {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 768px) {
    main {
      flex-direction: row;
      flex-wrap: wrap;
    }
  }
</style>
