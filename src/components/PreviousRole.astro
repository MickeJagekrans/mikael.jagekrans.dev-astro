---
interface Props {
  role: {
    company: string;
    title: string;
    period: string;
    description: string;
  };
}

const { role } = Astro.props;
---

<details class="role">
  <summary>
    <h3>{role.company}</h3>
    <div class="metadata lexend-deca extralight">
      <span class="title">{role.title}</span>
      <span class="period">{role.period}</span>
    </div>
  </summary>

  <div class="description" set:html={role.description}></div>
</details>
<hr/>

<style>
  details {
    cursor: pointer;
    border-color: var(--dark-copper) !important;
  }

  summary {
    list-style-type: none;
    padding-top: 1em;
    padding-bottom: 1em;
  }

  summary::-webkit-details-marker {
    display: none;
  }

  summary::before {
    color: var(--copper);
    content: "+";
    float: right;
    font-size: 1.5em;
  }

  [open] summary::before {
    content: "â€“";
  }

  h3 {
    display: inline;
    margin: 0;
    color: var(--copper);
    font-weight: 300;
  }

  .metadata {
    padding-top: 0.5em;
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    color: var(--pale-bronze);
  }

  .period {
    font-size: 0.8em;
  }

  .description p {
    margin-top: 0;
  }

  @media (hover: hover) {
    details:hover h3 {
      color: var(--whiteish)!important;
    }
  }

  @media (max-width: 419px) {
    .metadata {
      flex-direction: column;
    }
  }

  @media (min-width: 768px) {
    .period {
      font-size: 1em;
    }
  }
</style>
