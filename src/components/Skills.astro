---
interface Props {
  skills: {
    title: string;
    items: string[];
  }[];
}

const { skills} = Astro.props;
---

<section>
  <h2>Skills</h2>

  <div id="skills-lists">
    {skills.map((skillList) => (
      <div class="skills-list">
        <h3>{skillList.title}</h3>
        <ul>
          {skillList.items.map((skill) => (
            <li>{skill}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>

<style>
  .skills-list {
    margin-bottom: 2em;
  }

  h3 {
    margin-bottom: 0.5em;
  }

  ul {
    margin-top: 0;
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    list-style-type: none;
  }

  li {
    color: var(--pale-bronze);
    padding-right: 1em;
  }

  @media (min-width: 768px) {
    section {
      width: 100%;
      max-width: unset;
      padding-left: 3em;
      padding-right: 3em;
      background-color: var(--blue-green);
    }

    #skills-lists {
      display: flex;
      flex-wrap: wrap;
    }

    .skills-list {
        width: 50%;
    }
  }
</style>
