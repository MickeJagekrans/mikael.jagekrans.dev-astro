---
interface Props {
  skills: {
    title: string;
    items: string[];
  }[];
}

const { skills } = Astro.props;
---

<section>
  <div id="skills">
    <h2>Skills</h2>

    <div id="skills-lists">
      {skills.map((skillList) => (
        <div class="skills-list">
          <h3>{skillList.title}</h3>
          <ul>
            {skillList.items.map((skill) => (
              <li>{skill}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .skills-list {
    margin-bottom: 2em;
  }

  h3 {
    margin-bottom: 0.5em;
  }

  ul {
    margin-top: 0;
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    list-style-type: none;
  }

  li {
    color: var(--pale-bronze);
    padding-right: 1em;
  }

  @media (min-width: 768px) {
    section {
      width: 100%;
      padding: 0;
      max-width: unset;
      background-color: var(--blue-green);
    }

    #skills {
      padding: 2em 4em;
    }

    #skills-lists {
      display: flex;
      flex-wrap: wrap;
    }

    .skills-list {
        width: 50%;
    }
  }

  @media (min-width: 1024px) {
    .skills-list {
      width: 32.5%;
      max-width: 1000px;
    }
  }
</style>
